<script> 
$(function () {  
	
	      $('#container').highcharts({
            title: {
                text: 'Sleep Chart',
                x: -20 //center
            },
            xAxis: { 
	
                categories: [ 
                              <% @mood_data.each do |t| %> 
                                '<%= t.entry_at.strftime("%m/%d/%y") %>',  
                              <% end %>
                            ]
            },
            yAxis: {
                lineColor: '#FF0000',
							  min: 0, 
								max: 24
            },  
            plotOptions: {
						            categories: {
						                colorByPoint: true
						            }
						},
            tooltip: {
               
            },
            legend: {
                layout: 'vertical',
                align: 'right',
                verticalAlign: 'middle',
                borderWidth: 0
            },
            series: [{
                data: <%= @mood_data.map{|vv| vv.sleep }%>
            }
          ]
        });
    });  

</script> 
    
