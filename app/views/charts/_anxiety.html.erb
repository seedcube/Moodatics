<script> 
$(function () {
        $('#container3').highcharts({
            title: {
                text: 'Anxiety',
                x: -20 //center
            },
            xAxis: { 
	
                categories: [ 
                              <% @mood_data.each do |t| %> 
                                '<%= t.entry_at.strftime("%m/%d/%y") %>',  
                              <% end %>
                            ]
            },							
             yAxis: {

								                lineColor: '#FF0000',
															  min: 1, 
																max: 3,
																allowDecimals: false,
																labels: {
																         formatter: function() { 
																	          if(this.value == 1){ 
																	            return "Mild" 
																	          }else if(this.value == 2){
																		          return "Moderate"  
																	          }else if(this.value == 3){
																		          return "Severe" 
																	          }

												                }
																   }

								            },
								            tooltip: {
								               formatter: function() { 
												          if(this.y == 1){ 
												            return this.x + "- Mild" 
												          }else if(this.y == 2){
													          return this.x + " - Moderate"  
												          }else if(this.y == 3){
													          return this.x + " - Severe" 
												          }

								              }
								            },
            legend: {
                layout: 'vertical',
                align: 'right',
                verticalAlign: 'middle',
                borderWidth: 0
            },
            series: [{  
	              name: 'Anxiety',  
                data: <%= @mood_data.map{|vv| vv.anxiety }%>
            }
          ]
        });
    });  

</script>
